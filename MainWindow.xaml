                        <ComboBox Name="cmbHG" SelectionChanged="cmbHG_SelectionChanged" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="20" Margin="13,18,0,0" VerticalAlignment="Top" Width="142"/>
                        <ComboBox Name="cmbLG" SelectionChanged="cmbLG_SelectionChanged"  VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="20" Margin="13,38,0,0" VerticalAlignment="Top" Width="142"/>
                        <ComboBox Name="cmbM" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="20" Margin="13,58,0,0" VerticalAlignment="Top" Width="142"/>
                        <ComboBox Name="cmbHGM" SelectionChanged="cmbHGM_SelectionChanged" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="20" Margin="160,18,0,0" VerticalAlignment="Top" Width="142"/>
                        <ComboBox Name="cmbLGM" SelectionChanged="cmbLGM_SelectionChanged" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="20" Margin="160,38,0,0" VerticalAlignment="Top" Width="142"/>
                        <ComboBox Name="cmbHE" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="20" Margin="13,78,0,0" VerticalAlignment="Top" Width="142"/>
                        <ComboBox Name="cmbCH" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="20" Margin="160,78,0,0" VerticalAlignment="Top" Width="142"/>
                        <ComboBox Name="cmbLE" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="20" Margin="307,78,0,0" VerticalAlignment="Top" Width="142"/>
                        <ComboBox Name="cmbAM" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="20" Margin="13,98,0,0" VerticalAlignment="Top" Width="142"/>
                        <ComboBox Name="cmbR1" SelectionChanged="cmbR1_SelectionChanged" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="20" Margin="160,98,0,0" VerticalAlignment="Top" Width="142"/>
                        <ComboBox Name="cmbR2" SelectionChanged="cmbR2_SelectionChanged" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="20" Margin="307,98,0,0" VerticalAlignment="Top" Width="142"/>
                        <Button x:Name="GenBuildCode" Click="GenBuildCode_Click"  Content="Generate Code" HorizontalAlignment="Left" Height="22" Margin="196,134,0,0" VerticalAlignment="Top" Width="106"/>
                        <TextBlock Height="37" Margin="0,1,10,0" TextWrapping="Wrap" Text="Build Code Maker" VerticalAlignment="Top" Foreground="White" FontSize="27" HorizontalAlignment="Right" Width="253"/>
                        <Image Height="94" Margin="654,43,60,0" VerticalAlignment="Top" Source="Resources/IMG/Menu/T_Icon_Crafting.png" RenderTransformOrigin="-0.355,1.261"/>
                    </Grid>
                </Viewbox>
            </TabItem>
            <TabItem Name="BossManagerTab" Header="Checkpoint Manager">
                <Viewbox  Stretch="Uniform"  StretchDirection="Both">
                    <Grid Width="824" Height="630">
                        <Image Source="Resources/IMG/Menu/remnant_of_mankind_bg.jpg" Stretch="UniformToFill" Margin="0,106,0,0"/>
                        <TextBlock HorizontalAlignment="Left" TextAlignment="Center" Height="61" Margin="10,10,0,0" TextWrapping="Wrap" Text="Checkpoint Manager" VerticalAlignment="Top" Width="374" FontSize="36" Foreground="White"/>
