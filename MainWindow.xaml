                        <TextBox Name="BuildNameEnter" HorizontalAlignment="Left" Height="22" Margin="352,150,0,0" TextWrapping="Wrap" Text="Build Name" VerticalAlignment="Top" Width="173"  />
                        <TextBox Name="BuildCodeEnter" HorizontalAlignment="Left" Height="22" Margin="352,172,0,0" TextWrapping="Wrap" Text="Build Code" VerticalAlignment="Top" Width="173"/>
