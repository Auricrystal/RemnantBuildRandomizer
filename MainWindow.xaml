                        <CheckBox x:Name="AlterFile" IsChecked="False" Checked="AlterFile_Checked" Unchecked="AlterFile_Unchecked"  Content="Alter Save File" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="34" Margin="525,0,0,0" VerticalAlignment="Top" Width="169" Foreground="White" FontSize="22"/>
                        <TextBlock TextWrapping="Wrap" Text="In order to preserve your personal save you must have this check box enabled, it is responsible for reverting back to your original save when you are finished.&#xA;&#xA;DO NOT disable unless you are at the Main Menu." Foreground="White" Margin="389,35,10,524"/>
                        <Button IsEnabled="{Binding IsChecked, ElementName=AlterFile}" Name="FeelingLucky" Content="I'm Feeling Lucky" ToolTip="Pick a random boss" Click="FeelingLucky_Click"  HorizontalAlignment="Left" Height="28" Margin="427,284,0,0" VerticalAlignment="Top" Width="113"/>
                        <TextBlock TextWrapping="Wrap" Text="ONLY reroll or choose Boss checkpoints while at the Main Menu, doing it during gameplay will have no effect." Foreground="White" Margin="427,178,246,351"/>
                        <TabControl Margin="10,106,402,0" Height="466" VerticalAlignment="Top" IsEnabled="{Binding IsChecked, ElementName=AlterFile}" >
                            <TabItem Header="Boss List">
                                <DataGrid Name="BossList" SelectionMode="Single" AutoGeneratingColumn="BossList_AutoGeneratingColumn">
                                    <DataGrid.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem></MenuItem>
                                        </ContextMenu>
                                    </DataGrid.ContextMenu>
                                </DataGrid>
                            </TabItem>
                            <TabItem Header="Vendor List">
                                <DataGrid Name="VendorList" SelectionMode="Single" AutoGeneratingColumn="VendorList_AutoGeneratingColumn"/>
                            </TabItem>
                        </TabControl>
                        <TextBox Name="CheckSearchBar" TextChanged="CheckSearchBar_TextChanged"  HorizontalAlignment="Left" VerticalContentAlignment="Center" Height="25" Margin="10,577,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="412"/>
                    </Grid>
                </Viewbox>
            </TabItem>
            <TabItem Header="Log">
                <Grid Background="#FFE5E5E5" Margin="-2,-2,-2,-2" >
                    <TextBox x:Name="txtLog" TextWrapping="Wrap" Background="White" VerticalScrollBarVisibility="Auto"/>
                </Grid>
            </TabItem>
            <TabItem Header="Credits">
                <Viewbox Stretch="Uniform"  StretchDirection="Both">
                    <Grid Width="824" Height="630">
                        <TextBlock Text="CoolUsername" FontSize="24" Foreground="White" Width="172" Height="32" Margin="35,109,617,489"/>
