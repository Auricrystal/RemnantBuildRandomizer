<Window x:Class="RemnantBuildRandomizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemnantBuildRandomizer"
        mc:Ignorable="d"
        Title="Remnant Build Randomizer" Height="711.531" Width="837.522"
        Name="RemnantBuildRandomizer" Icon="Resources/IMG/Menu/RedCrystal.png"
        Background="#222222"
        Closing="RemnantBuildRandomizer_Closing" Loaded="Window_Loaded"
        
        MinHeight="711.531" MinWidth="837.522"
        >
    <Window.Resources>
        <ResourceDictionary>
            <ScaleTransform x:Key="windowScaleTransform" ScaleX="0.5" ScaleY="0.5" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid Name="MainGrid" Background="#222222">
        <Menu Height="23" VerticalAlignment="Top" >
            <MenuItem Header="Options">
                <MenuItem Header="Copy Build to Clipboard" Click="CopyBuild_Click"></MenuItem>
                <MenuItem Header="Check for Update" Click="UpdateCheck_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Data Folder" Click="DataFolder_Click"/>
            </MenuItem>
            <ComboBox Name="cmbCharacter" SelectionChanged="CmbCharacter_SelectionChanged" Width="120"></ComboBox>
            <TextBlock Name="SaveTime" Text="Last Save:"/>
            <CheckBox Name="KeepCheckpoint" Content="Keep Current Checkpoint" Checked="KeepCheckpoint_Checked" />

        </Menu>
