<Window x:Class="RemnantBuildRandomizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemnantBuildRandomizer"
        mc:Ignorable="d"
        Title="RemnantBuildRandomizer" Height="505.531" Width="837.522"
        Name="RemnantBuildRandomizer" Icon="Resources/IMG/RedCrystal.png"
        Background="Black"
        Closing="RemnantBuildRandomizer_Closing"
        >
    <Grid Name="MainGrid" SizeChanged="MainGrid_SizeChanged" Margin="0,-20,0,-20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="ApplicationScaleTransform"
                        CenterX="0"
                        CenterY="0"
                        ScaleX="{Binding ElementName=RemnantBuildRandomizer, Path=ScaleValue}"
                        ScaleY="{Binding ElementName=RemnantBuildRandomizer, Path=ScaleValue}" />
        </Grid.LayoutTransform>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="466" Margin="0,10,-1,9" Width="832" >
            <Image x:Name="Background" HorizontalAlignment="Center" VerticalAlignment="Center"  Source="Resources/IMG/RemnantBlanInv.png" />
            <Grid Name="BuildScreen" HorizontalAlignment="Left" Height="433" Margin="263,35,0,0" VerticalAlignment="Top" Width="340">
                <Image  x:Name="BuildBackground" HorizontalAlignment="Center" Margin="2,0" VerticalAlignment="Center" Source="Resources/IMG/RemnantBuildBackground.png" Height="433"/>

                <Image  x:Name="HandGunSlot" HorizontalAlignment="Center" Height="70" VerticalAlignment="Center"  Margin="10,2,50,361" Source="Resources/IMG/Weapons/Hand/RegHand/_No Hand Gun.png"/>
                <Image  x:Name="LongGunSlot" HorizontalAlignment="Center" Height="70" VerticalAlignment="Center" Margin="10,77,50,286" Source="Resources/IMG/Weapons/Long/RegLong/_No Long Gun.png"/>
                <Image  x:Name="MeleeSlot" HorizontalAlignment="Center" Height="70" VerticalAlignment="Center"  Margin="10,152,50,211" Source="Resources/IMG/Weapons/Melee/_Fists.png"/>
                <Image  x:Name="HeadSlot" HorizontalAlignment="Center" Height="98" VerticalAlignment="Center" Width="106" Margin="0,226,234,108" Source="Resources/IMG/Armor/Head/_No Head.png"/>

                <Image  x:Name="ChestSlot" HorizontalAlignment="Center" Height="98" VerticalAlignment="Center" Width="106" Margin="111,226,121,108" Source="Resources/IMG/Armor/Chest/_No Chest.png"/>
                <Image  x:Name="LegSlot" HorizontalAlignment="Center" Height="98" VerticalAlignment="Center" Width="106" Margin="228,226,6,108" Source="Resources/IMG/Armor/Legs/_No Legs.png"/>
                <Image  x:Name="AmuletSlot" HorizontalAlignment="Center" Height="98" VerticalAlignment="Center" Width="106" Margin="0,330,234,5" Source="Resources/IMG/Trinkets/Amulets/_No Amulet.png"/>
                <Image  x:Name="Ring1Slot" HorizontalAlignment="Center" Height="98" VerticalAlignment="Center" Width="106" Margin="112,330,122,5" Source="Resources/IMG/Trinkets/Rings/_No Ring.png"/>
                <Image  x:Name="Ring2Slot" HorizontalAlignment="Center" Height="98" VerticalAlignment="Center" Width="106" Margin="228,330,6,5" Source="Resources/IMG/Trinkets/Rings/_No Ring.png"/>
                <Image  x:Name="Mod1Slot" HorizontalAlignment="Center" Height="68" VerticalAlignment="Center" Width="68" Margin="270,0,6,363" Source="Resources/IMG/Mods/RegularMods/_No Mod.png"/>
                <Image  x:Name="Mod1Cover" HorizontalAlignment="Center" Height="68" VerticalAlignment="Center" Width="68" Margin="270,0,6,363" Source="Resources/IMG/Mods/Mod Overlay.png"/>
                <Image  x:Name="Mod2Slot" HorizontalAlignment="Center" Height="68" VerticalAlignment="Center" Width="68" Margin="268,77,4,288" Source="Resources/IMG/Mods/RegularMods/_No Mod.png"/>
                <Image  x:Name="Mod2Cover" HorizontalAlignment="Center" Height="68" VerticalAlignment="Center" Width="68" Margin="268,77,4,288" Source="Resources/IMG/Mods/Mod Overlay.png"/>
            </Grid>
            <Button x:Name="CopyBuild" Click="CopyBuild_Click"  Content="Copy To&#xa;Clipboard"  HorizontalAlignment="Left" Margin="738,416,0,0" VerticalAlignment="Top" Width="78" Height="40"/>
            <Button x:Name="RerollButton" Click="ReRollImg" Content="Reroll Build" HorizontalAlignment="Left" Margin="617,416,0,0" VerticalAlignment="Top" Width="116" Height="40"/>
            <Grid HorizontalAlignment="Left" Height="465" Margin="4,0,0,0" VerticalAlignment="Top" Width="256">
                <Label Content="Item Blacklist" VerticalContentAlignment="center" HorizontalContentAlignment="center" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Height="36" Width="236" Foreground="White" FontSize="24" FontFamily="/RemnantBuildRandomizer;component/Resources/Fonts/#Montserrat Light"/>
                <TabControl HorizontalAlignment="Left" Height="240" VerticalAlignment="Top" Width="256" Margin="0,36,0,0" Background="{x:Null}">
                    <TabItem Header="Weapon">
                        <ListBox Background="{x:Null}" Name="WeaponList" ItemsSource="{Binding MyItems}" Margin="-2,-2,-2,-2" >
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox FontFamily="/RemnantBuildRandomizer;component/Resources/Fonts/#Montserrat" ToolTip="{Binding ID}"  Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" IsChecked="{Binding Disabled, Mode=TwoWay}" Content="{Binding Itemname}" Foreground="White" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </TabItem>
                    <TabItem Header="Armor">
                        <ListBox Background="{x:Null}" Name="ArmorList" ItemsSource="{Binding MyItems}" Margin="-2,-2,-2,-2" >
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox FontFamily="/RemnantBuildRandomizer;component/Resources/Fonts/#Montserrat"  Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" IsChecked="{Binding Disabled, Mode=TwoWay}" Content="{Binding Itemname}" Foreground="White" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </TabItem>
                    <TabItem Header="Amulet">
                        <ListBox Background="{x:Null}" Name="AmuletList" ItemsSource="{Binding MyItems}" Margin="-2,-2,-2,-2" >
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox FontFamily="/RemnantBuildRandomizer;component/Resources/Fonts/#Montserrat"  Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" IsChecked="{Binding Disabled, Mode=TwoWay}" Content="{Binding Itemname}" Foreground="White" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </TabItem>
                    <TabItem Header="Ring">
                        <ListBox Background="{x:Null}" Name="RingList" ItemsSource="{Binding MyItems}" Margin="-2,-2,-2,-2">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox FontFamily="/RemnantBuildRandomizer;component/Resources/Fonts/#Montserrat"  Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" IsChecked="{Binding Disabled, Mode=TwoWay}" Content="{Binding Itemname}" Foreground="White" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </TabItem>
                    <TabItem Header="Mod">
                        <ListBox Background="{x:Null}" Name="ModList" ItemsSource="{Binding MyItems}" Margin="-2,-2,-2,-2">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox FontFamily="/RemnantBuildRandomizer;component/Resources/Fonts/#Montserrat"  Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" IsChecked="{Binding Disabled, Mode=TwoWay}" Content="{Binding Itemname}" Foreground="White" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </TabItem>
                </TabControl>
            </Grid>
            <Image x:Name="RedCrystal" HorizontalAlignment="Left" Height="278" Margin="617,82,0,0" VerticalAlignment="Top" Width="199" Source="Resources/IMG/RedCrystal.png"/>
            <TextBlock FontFamily="/RemnantBuildRandomizer;component/Resources/Fonts/#Montserrat SemiBold" HorizontalAlignment="Left" Height="74" Margin="617,8,0,0" TextWrapping="Wrap" Text="Remnant Build Randomizer" VerticalAlignment="Top" Width="199" Foreground="White" FontSize="24"/>
            <TextBox Name="BuildNum" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Height="32" Margin="265,0,0,0" TextWrapping="Wrap" Text="Build" VerticalAlignment="Top" Width="328" FontFamily="/RemnantBuildRandomizer;component/Resources/Fonts/#Montserrat" Background="{x:Null}" Foreground="White" FontSize="20"/>
            <TextBox Name="BuildEnter" HorizontalAlignment="Left" Height="23" Margin="4,279,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" HorizontalContentAlignment="Center"/>
            <ListBox  Background="{x:Null}" KeyDown="BuildList_KeyDown" Name="BuildList" ItemsSource="{Binding MyItems}" HorizontalAlignment="Left" Height="155" Margin="4,307,0,0" VerticalAlignment="Top" Width="256">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox FontFamily="/RemnantBuildRandomizer;component/Resources/Fonts/#Montserrat"  Checked="BuildBox_Checked"  Unchecked="BuildBox_UnChecked"  IsChecked="{Binding Disabled, Mode=TwoWay}" Content="{Binding Code, Mode=TwoWay}" Foreground="White" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Grid HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100"/>
            <Button x:Name="Add_Build" Click="Add_Build_Click"  Content="Add Build" HorizontalAlignment="Left" Margin="177,279,0,0" VerticalAlignment="Top" Width="83" Height="23"/>

        </Grid>
        <ToolBarPanel HorizontalAlignment="Left" Height="26" Margin="295,0,-3,0" VerticalAlignment="Top" Width="539"/>
    </Grid>
</Window>
